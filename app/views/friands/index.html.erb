<% if user_signed_in? %>

<table class="table table-striped table-bordered table-hover">
<thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Facebook</th>
  
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @friands.each do |friand| %>
      <% if friand.user == current_user %> 
      <tr>
        <td>
        <%= link_to friand.first_name + ' ' + friand.last_name, friand  %>
       </td>
      
        <td><%= friand.email %></td>
        <td><%= friand.phone %></td>
        <td><%= friand.facebook %></td>
      
        
       
        <td><%= link_to 'Delete', friand,class:"btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Add New', new_friand_path, class:"btn btn-success" %>
<% else %>
<h1> Welcome to Friends App</h1>
This is my first Ruby on rails App 
<% end %>

